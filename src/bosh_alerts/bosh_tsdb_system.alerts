ALERT BOSHTSDBJobSystemDiskWillFillIn2Hours
  IF predict_linear(bosh_tsdb_job_system_disk_percent{bosh_job_name!~"^compilation.*"}[1h], 2*3600) > 90
  FOR 30m
  LABELS {
    service = "bosh-job",
    severity = "warning",
